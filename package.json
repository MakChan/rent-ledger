{
  "name": "rent-ledger",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/MakChan/rent-ledger.git",
  "author": "Mayank Chauhan <mayank.chauhan15@gmail.com>",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "netlify-lambda serve server/src --config ./webpack.functions.js",
    "start": "concurrently -n client,server \"yarn client\" \"yarn server\"",
    "build": "run-s build:**",
    "build:prebuild": "cd client && yarn install",
    "build:client": "cd client && yarn build",
    "build:lambda": "netlify-lambda build server/src",
    "build-concurrently": "concurrently -n lambda,client \"yarn build:lambda\" \"yarn build:client\""
  },
  "dependencies": {
    "concurrently": "^4.1.2",
    "dotenv-webpack": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "netlify-lambda": "^1.6.3"
  }
}
